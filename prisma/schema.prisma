// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  owner
  designer
  assistant
  admin
  client
}

enum ProductScope {
  global
  tenant
}

enum ProductStatus {
  active
  discontinued
  archived
  deleted
}

enum MediaType {
  image
  spec
  guide
}

enum OverrideAvailability {
  default
  hidden
  preferred
}

enum ScrapeMode {
  single
  list
}

enum ScrapeStatus {
  pending
  running
  success
  failed
}

model User {
  id             String       @id @default(cuid())
  name           String?
  email          String       @unique
  hashedPassword String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  tenants        UserTenant[]
}

model Tenant {
  id        String                  @id @default(cuid())
  name      String
  slug      String                  @unique
  logoUrl   String?
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt
  theme     TenantTheme?
  users     UserTenant[]
  products  Product[] // Tenant-owned products
  overrides TenantProductOverride[]
  scrapeJobs ScrapeJob[]
}

model TenantTheme {
  id             String   @id @default(cuid())
  tenantId       String   @unique
  tenant         Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  primaryColor   String   @default("#3b82f6")
  secondaryColor String   @default("#f1f5f9")
  accentColor    String   @default("#f1f5f9")
  bgColor        String   @default("#ffffff")
  textColor      String   @default("#171717")
  fontFamily     String   @default("sans-serif")
  borderRadius   String   @default("0.5rem")
  shadowPreset   String   @default("sm")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model UserTenant {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  role      UserRole @default(assistant)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, tenantId])
}

model Vendor {
  id        String                    @id @default(cuid())
  name      String
  website   String?
  createdAt DateTime                  @default(now())
  updatedAt DateTime                  @updatedAt
  products  Product[]
  overrides TenantProductOverride[]
}

model ProductCategory {
  id        String        @id @default(cuid())
  name      String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  types     ProductType[]
}

model ProductType {
  id         String          @id @default(cuid())
  categoryId String
  category   ProductCategory @relation(fields: [categoryId], references: [id])
  name       String
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  products   Product[]
}

model Product {
  id            String                  @id @default(cuid())
  vendorId      String?
  vendor        Vendor?                 @relation(fields: [vendorId], references: [id])
  productTypeId String
  productType   ProductType             @relation(fields: [productTypeId], references: [id])
  scope         ProductScope            @default(global)
  ownerTenantId String? // Required if scope='tenant'
  ownerTenant   Tenant?                 @relation(fields: [ownerTenantId], references: [id])
  name          String
  description   String?
  baseSku       String?
  status        ProductStatus           @default(active)
  urlSource     String?
  urlVendor     String?
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
  variants      ProductVariant[]
  media         ProductMedia[]
  overrides     TenantProductOverride[]
  health        ProductUrlHealth?
}

model ProductVariant {
  id             String                  @id @default(cuid())
  productId      String
  product        Product                 @relation(fields: [productId], references: [id], onDelete: Cascade)
  name           String
  variantSku     String?
  attributesJson Json?
  createdAt      DateTime                @default(now())
  updatedAt      DateTime                @updatedAt
  media          ProductMedia[]
  overrides      TenantProductOverride[]
}

model ProductMedia {
  id        String          @id @default(cuid())
  productId String
  product   Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variantId String?
  variant   ProductVariant? @relation(fields: [variantId], references: [id])
  url       String
  type      MediaType       @default(image)
  sortOrder Int             @default(0)
}

model TenantProductOverride {
  id                String               @id @default(cuid())
  tenantId          String
  tenant            Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  productId         String
  product           Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  variantId         String?
  variant           ProductVariant?      @relation(fields: [variantId], references: [id])
  costPrice         Decimal?             @db.Decimal(10, 2)
  sellPrice         Decimal?             @db.Decimal(10, 2)
  markupPercent     Decimal?             @db.Decimal(10, 2)
  discountPercent   Decimal?             @db.Decimal(10, 2)
  internalSku       String?
  internalNotes     String?
  preferredVendorId String?
  preferredVendor   Vendor?              @relation(fields: [preferredVendorId], references: [id])
  leadTimeOverride  String?
  availability      OverrideAvailability @default(default)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  @@unique([tenantId, productId, variantId])
}

model ScrapeJob {
  id            String       @id @default(cuid())
  tenantId      String
  tenant        Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  url           String
  mode          ScrapeMode
  status        ScrapeStatus @default(pending)
  resultSummary String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model ProductUrlHealth {
  id             String   @id @default(cuid())
  productId      String   @unique
  product        Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  lastCheckedAt  DateTime @default(now())
  lastStatusCode Int?
  isBroken       Boolean  @default(false)
  notes          String?
}
